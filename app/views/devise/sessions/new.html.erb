<div class="wrapper">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form-signin user-signin-form" }) do |f| %>
    <h2 class="form-signin-heading">Please Login</h2>
    <%= f.email_field :email, placeholder: "Email Address", class: "form-control user-signin-email" %>
    <p class="user-signin-email-error error-p"></p>
    <%= f.password_field :password, class: "form-control user-signin-password", placeholder: "Password" %>
    <p class="user-signin-password-error error-p"></p>
    <!-- <label class="checkbox">
      <%#= f.check_box :remember_me %> Remember me
    </label> -->
    <%= recaptcha_tags callback: "submitInvisibleRecaptchaForm" %>
    <p class="user-verification-captcha-error error-p"></p>
    <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block login-button user-signin-form-btn", data: { env: Rails.env } %>
    <%= link_to "Register", verify_code_path, class: "btn btn-lg btn-default btn-block login-button" %>
  	<%= link_to "Forgot your password?", new_password_path(resource_name) %>
  <% end %>
</div>
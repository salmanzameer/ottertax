<div class="wrapper">
  <%= form_tag  invite_user_path, class: "form-signin user-verify-code-form", method: :get do %>
    <h2 class="form-signin-heading">Prove your identity to signup</h2>
    <p class="invitation-page-note">OtterTax allows you to view, print, and email your tax forms. To get started, enter the last four digits of your Social Security Number and the five-letter access code supplied by your employer.</p>
    <%= text_field_tag :ssn, "", placeholder: "Last 4 digits of SSN", class: "form-control" %>
    <%= text_field_tag :code, "", class: "form-control", placeholder: "5 character access code" %>      
    <%= hidden_field_tag :auth_token, "", class: "user-verifiction-auth-token" %>
    <%= hidden_field_tag :code_id, "", class: "user-ssn-code-id" %>
    <%= recaptcha_tags %>
    <%= submit_tag "Register", class: "btn btn-lg btn-primary btn-block login-button user-verify-code-form-btn", data: { path: verify_code_path } %>
    Already have an account? <%= link_to "Click here to login", new_session_path('user')  %>
  <% end %>
</div>
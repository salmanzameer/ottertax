<div class="wrapper">
  <%= form_tag  invite_user_path, class: "form-signin user-verify-code-form", method: :get do %>
    <h2 class="form-signin-heading">Register Your Account</h2>
    <p class="invitation-page-note">OtterTax allows you to view, print, and email your tax forms. To get started, enter the last four digits of your Social Security Number and the five-letter access code supplied by your employer.</p>
    <%= number_field_tag :ssn, "", placeholder: "Last 4 digits of SSN", class: "form-control user-verification-ssn", maxlength: 4, oninput: "javascript: if (this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);" %>
    <p class="user-verification-ssn-error error-p"></p>
    <%= text_field_tag :code, "", class: "form-control user-verification-code", placeholder: "5 character access code", maxlength: 5 %>      
    <p class="user-verification-code-error error-p"></p>
    <%= hidden_field_tag :auth_token, "", class: "user-verifiction-auth-token" %>
    <%= hidden_field_tag :code_id, "", class: "user-ssn-code-id" %>
    <%= recaptcha_tags callback: "submitInvisibleRecaptchaForm" %>
    <p class="user-verification-captcha-error error-p"></p>
    <%= submit_tag "Register", class: "btn btn-lg btn-primary btn-block login-button user-verify-code-form-btn", data: { path: verify_code_path, env: Rails.env } %>
    Already have an account? <%= link_to "Click here to login", new_session_path('user')  %>
  <% end %>
</div>

<%= render partial: 'verification_error_modal' %>